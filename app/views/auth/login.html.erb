
<div class="box">

  <%= form_for :user, url: login_path do |f| %>
    <%= render 'errors' %>

    <h1>Login</h1>

    <p>
      Please enter your email and password to continue
    </p>

    <%= f.email_field :email , placeholder: "Email", autofocus:true %>
    <%= f.password_field :password , placeholder: "*********" %>

    <button>
      <i class="fa fa-lock-open"></i>
      Login
    </button>

  <% end %>
</div>
